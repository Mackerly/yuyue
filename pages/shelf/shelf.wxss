page {
  background-color: #fff;
  font-size: 28rpx;
}

.shelf-op {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.box-op {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0 0 20rpx;
  justify-content: center;
  color: #7EC0EE;
}

.box-op > wx-view {
  display: block;
  padding: 20rpx 40rpx;
  /*border: 1px solid gray;*/
}

.book-op {
  margin-top: 20rpx;
  color: #7EC0EE;
  padding: 20rpx 20rpx 20rpx 0;
}

.left-btn {
  border-left: 1px solid #7EC0EE;
  border-top: 1px solid #7EC0EE;
  border-bottom: 1px solid #7EC0EE;
  border-radius: 4px 0 0 4px;
}

.right-btn {
  border-right: 1px solid #7EC0EE;
  border-top: 1px solid #7EC0EE;
  border-bottom: 1px solid #7EC0EE;
  border-radius: 0 4px 4px 0;
}

.active {
  background-color: #7EC0EE;
  color: #fff;
}

.book-list {
  display: flex;
  flex-flow: row wrap;
  margin: 20rpx 0;
  padding: 0 35rpx;
  justify-content: flex-start;
}

.book-item {
  display: flex;
  flex-direction: column;
  margin: 10rpx 0 0 18rpx;
  align-items: center;
  width: 150rpx;
  position: relative;

}

.icon-bk-remove {
  position: absolute;
  top: 5rpx;
  left: 114rpx;

}

.book-image {
  flex-shrink: 0;
  width: 150rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}
