
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #CCCCCC;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
}

.userinfo-name {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.userinfo-name > wx-text:last-child {
  color: #aaa;
  font-size: 14px;
  margin-top: 10rpx;
}

.top-10 {
  margin-top: 20rpx;
}

.social-layout > wx-view {
  padding: 20rpx;
  border-bottom: 2rpx solid #CCCCCC;
  font-size: 32rpx;
}

.social-layout > wx-view:first-child {
  border-top: 2rpx solid #CCCCCC;
}

.social-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
