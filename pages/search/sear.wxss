
.search-box {
  display: flex;
  flex-direction: column;
}

.search-box > wx-input {
  border: 1px solid #A8A8A8;
  border-radius: 25px;
  width: 90%;
  padding: 4px 10px;
  margin: 10rpx auto;
}

.top-10 {
  margin-top: 20rpx;
}

.left-10 {
  margin-left: 20rpx;
}

.book-list {
  display: flex;
  flex-direction: column;
}

.book-item {
  display: flex;
  flex-direction: row;
  padding: 10rpx 10rpx;
}

.book-image {
  flex-shrink: 0;
  width: 150rpx;
  height: 200rpx;
}

.book-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 180rpx;
  padding: 10rpx 20rpx;
}

.book-info > wx-text {
  word-wrap: break-word;
  margin-bottom: 5rpx;
  overflow: hidden;
}

.book-info > wx-view {
  height: 40rpx;
}

.book-info > wx-text:first-child {
  height: 30rpx;
}

.book-desc {
  height: 100rpx;
  color: gray;
}

.keyword-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.keyword-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  font-size: 32rpx;
}

.keyword-list > wx-view {
  border-top: 2rpx solid #CCCCCC;
  padding: 20rpx 20rpx;
}
